    function addAllEdgesFor(node, pos, edges, isfwd, newtype) {
        if (edges !== undefined) {
            for (edge in edges) {
                if (isfwd) {
                    let tgt = getNode(edge, pos+1);
                    addEdge(node, tgt, stats[edges[edge]]);
                    if (newtype === "callee")
                        adjustType(tgt, newtype)
                } else {
                    let tgt = getNode(edge, pos-1);
                    addEdge(tgt, node, stats[edges[edge]]);
                    if (newtype === "caller")
                        adjustType(tgt, newtype)
                }
            }
        }
    }

